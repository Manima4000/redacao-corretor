NODE_ENV=development
PORT=3000

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=redacao_corretor
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/redacao_corretor

# JWT
JWT_SECRET=your-super-secret-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# File Upload
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf
UPLOAD_STORAGE_TYPE=google_drive

# Google Drive (RECOMENDADO)
# Método 1: Service Account (recomendado para produção)
GOOGLE_DRIVE_AUTH_TYPE=service_account
GOOGLE_DRIVE_CREDENTIALS_PATH=./credentials/google-drive-service-account.json
GOOGLE_DRIVE_FOLDER_ID=root

# Método 2: OAuth2 (alternativo)
# GOOGLE_DRIVE_AUTH_TYPE=oauth2
# GOOGLE_DRIVE_CLIENT_ID=your-client-id
# GOOGLE_DRIVE_CLIENT_SECRET=your-client-secret
# GOOGLE_DRIVE_REFRESH_TOKEN=your-refresh-token

# AWS S3 (alternativo, para produção)
# UPLOAD_STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=redacao-corretor-files

# Local Storage (apenas desenvolvimento)
# UPLOAD_STORAGE_TYPE=local
# UPLOAD_DIR=uploads

# CORS - Permite múltiplas origens separadas por vírgula
# Desenvolvimento (local):
FRONTEND_URL=http://localhost:5173

# Desenvolvimento (rede local - adicione o IP da sua máquina):
# FRONTEND_URL=http://localhost:5173,http://192.168.1.100:5173

# Produção (DigitalOcean ou outro hosting):
# FRONTEND_URL=https://seu-dominio.com,https://www.seu-dominio.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Service (SMTP)
# Configure para enviar notificações automáticas por email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=seu-email@gmail.com
EMAIL_PASSWORD=sua-senha-de-app
EMAIL_FROM_NAME=Sistema de Redações

# Para Gmail:
# 1. Ative "Verificação em duas etapas" na sua conta Google
# 2. Gere uma "Senha de app" em https://myaccount.google.com/apppasswords
# 3. Use a senha de app no campo EMAIL_PASSWORD

# Para outros serviços:
# - SendGrid: smtp.sendgrid.net (porta 587)
# - Mailgun: smtp.mailgun.org (porta 587)
# - Outlook: smtp-mail.outlook.com (porta 587)
# - Yahoo: smtp.mail.yahoo.com (porta 587)
